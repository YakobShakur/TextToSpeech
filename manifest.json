{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "Userinterface.html"
    },
    "commands": {
      "speakSelection": {
        "suggested_key": {
          "default": "Ctrl+0"
        },
        "description": "Speak the selected text"
      }
    }
  }
  